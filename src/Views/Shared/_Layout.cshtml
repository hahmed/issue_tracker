<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/assets/app_css")
</head>
<body>
    <div class="contentwrapper">
        <div style="text-align: center; margin: 10px auto;">
            <img src="@Url.Content("~/assets/images/gotissues.png")" />
        </div>
        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="@Url.Action("List","Issues")">Issue Tracker</a>
                    <div class="nav-collapse collapse navbar-responsive-collapse">
                        <ul class="nav">
                            <li class="active"><a href="@Url.Action("New","Issues")"">New Issue</a></li>
                        </ul>
                        <form class="navbar-search pull-right" action="">
                            <input type="text" class="search-query span2" placeholder="Search">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="main">
            @RenderBody()
        </div>
        <div class="clearfix" style="margin: 0px 0px 30px;"></div>
        @Scripts.Render("~/assets/app_js")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
